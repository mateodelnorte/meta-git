#!/usr/bin/env node

const metaLoop = require('meta-loop');

if ( ! process.argv[2] || process.argv[2] === '--help')
  return console.log(`\n  usage:\n\n    meta git checkout <branch>\n`);

let branch = process.argv[2] === 'blank' ?
                      process.argv[3] :
                      process.argv[2];

let create = false;

if (branch === '-b') {
  create = true;
  branch = process.argv[3] === 'blank' ?
                      process.argv[4] :
                      process.argv[3];
}

metaLoop(`git checkout ${create ? '-b' : ''} ${branch}`);